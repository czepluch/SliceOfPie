@model SliceOfPie.Project
@{
    ViewBag.Title = "Index of Project "+Model.Title;
}

    <h2><img src="@Url.Content("~/Icons/project-icon.png")" style="vertical-align: middle;" /><span style="vertical-align: middle;">Index of Project @Model.Title</span></h2>
    <p>
        @Html.ActionLink("Create New Folder", "../Folder/CreateInProject", new SliceOfPie.Folder() { ProjectId = Model.Id }) | 
        @Html.ActionLink("Create New Document", "../Document/Create", new SliceOfPie.Document() { ProjectId = Model.Id })
    </p>
    <table>
    <tr>
        <th></th>
        <th>
            ID
        </th>
        <th>
            Title
        </th>
        
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model.GetFolders()) {
    <tr>
        <td>
            <img src="@Url.Content("~/Icons/folder-icon.png")" />
        </td>
        <td style="text-align: right;">
            @Html.AttributeEncode(item.Id)
        </td>
        <td>
            @Html.ActionLink(item.Title, "../Folder/Index", item)
        </td>
        <td></td>
        <td>
            @Html.ActionLink("Delete", "../Folder/Delete", item)
        </td>
    </tr>
}
@foreach (var item in Model.GetDocuments()) {
    <tr>
        <td>
            <img src="@Url.Content("~/Icons/document-icon.png")" />
        </td>
        <td>
            @Html.AttributeEncode(item.Id)
        </td>
        <td>
            @Html.ActionLink(item.Title, "../Document/Edit", item)
        </td>
        <td>
            @Html.ActionLink("Show", "../Document/Show", item)    
        </td>
        <td>
            @Html.ActionLink("Delete", "../Document/Delete", item)
        </td>
    </tr>
}

</table>
