@model SliceOfPie.Folder
@{
    ViewBag.Title = "Contents of Folder";
}

<h2>Contents of Folder @Model.Title</h2>
<p>
    @Html.ActionLink("Create New Folder", "../Folder/CreateInFolder", Model) | 
    @Html.ActionLink("Create New Document", "../Document/Create", Model)
</p>
<table>
    <tr>
        <th>
            ID
        </th>
        <th>
            Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.GetFolders()) {
    <tr>
        <td>
            @Html.AttributeEncode(item.Id)
        </td>
        <td>
            @Html.ActionLink(item.Title, "Index", item)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", item)
        </td>
    </tr>
}
@foreach (var item in Model.GetDocuments()) {
    <tr>
        <td>
            @Html.AttributeEncode(item.Id)
        </td>
        <td>
            @Html.ActionLink(item.Title, "../Document/Edit", item)
        </td>
        <td>
            @Html.ActionLink("Delete", "../Document/Delete", item)
        </td>
    </tr>
}

</table>
