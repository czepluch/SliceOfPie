<Window x:Class="SliceOfPie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SliceOfPie"
        Title="Slice of Pie" Height="500" Width="800" WindowState="Maximized">
    <DockPanel LastChildFill="True">    
        <ScrollViewer  Width="170" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="scrollViewer1"  DockPanel.Dock="Left">
            <TreeView Name="DocumentExplorer" FontSize="13" FontWeight="DemiBold" MouseRightButtonDown="DocumentExplorer_MouseRightButtonDown" MouseDoubleClick="DocumentExplorer_MouseDoubleClick" />
        </ScrollViewer>
        <ContentControl Grid.Column="0" Name="MainContent"/>
    </DockPanel>
</Window>
